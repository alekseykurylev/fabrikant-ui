{
  "private": true,
  "devDependencies": {
    "autoprefixer": "10.4.0",
    "browser-sync": "2.27.7",
    "gulp": "4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "^2.0.0",
    "postcss": "8.3.11",
    "stylelint": "13.13.1",
    "uikit": "^3.16.17"
